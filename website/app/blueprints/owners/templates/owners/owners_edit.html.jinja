<form hx-put="{{ '/owners/%s' %owner.id }} " hx-target="this" hx-swap="outerHTML" >

    <div class="row border p-2 border-white rounded">

        <div class="col-2"><span>{{ owner.id }}</span></div>    

        <div class="col-4">
            <input type="text" id="owner_name_pl" name="owner_name_pl" value="{{owner.name_pl}}">
        </div>

      <div class="col-3"></div>


        <div class="col-1 me-2">
            <button class="btn btn-danger" hx-get="{{ '/owners/%s/confirmed' %owner.id }} " >Cancel</button>
        </div>

        <div class="col-1">
            <button class="btn btn-primary">Submit</button>
        </div>

    </div>


</form>



 