<form hx-put="{{ '/owners/%s/accounts/%s' %(account.owner_id, account.id) }} " hx-target="this" hx-swap="outerHTML" >

    <div class="row border p-2 border-white rounded">

        <div class="col-2"><span>{{ account.id }}</span></div>    

        <div class="col-4">
            <input type="text" id="account_name_pl" name="account_name_pl" value="{{account.name_pl}}">
        </div>

        <div class="col-3"></div>

        <div class="col-1 me-2">
            <div class="col"><button class="btn btn-danger" hx-get="{{ '/owners/%s/accounts/%s/read' %(account.owner_id, account.id) }} " >Cancel</button></div>
        </div>

        <div class="col-1">
            <div class="col"><button class="btn btn-primary">Submit</button></div>
        </div>

    </div>

</form>



 