<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>

<form hx-put="{{ '/type/%s/category/%s/subcategory/%s' %(type_id, subcategory.category_id, subcategory.id) }} " hx-target="this" hx-swap="outerHTML" >

    <div class="row border p-2 border-white rounded">

        <div class="col-2"><span>{{ subcategory.id }}</span></div>    

        <div class="col-4">
            <input type="text" id="subcategory_name_pl" name="subcategory_name_pl" value="{{subcategory.name_pl}}">
        </div>

        <div class="col-3">
            <select name="subcategory_fixed_cost">
                {% if type_id == "1" %}
                    {% if subcategory.is_fixed_cost == 0 %}
                        <option selected value="0">Koszt zmienny</option>
                        <option value="1">Koszt stały</option>
                    {% else %}
                        <option value="0">Koszt zmienny</option>
                        <option selected value="1">Koszt stały</option>
                    {% endif %}
                {% else %}
                    {% if subcategory.is_fixed_cost == 0 %}
                        <option selected value="0">Dochód zmienny</option>
                        <option value="1">Dochód stały</option>
                    {% else %}
                        <option value="0">Dochód zmienny</option>
                        <option selected value="1">Dochód stały</option>
                    {% endif %}

                {% endif %}
            </select>
        </div>

        <div class="col-1 me-2">
            <div class="col"><button class="btn btn-danger" hx-get="{{ '/type/%s/category/%s/subcategory/%s/read' %(type_id, subcategory.category_id, subcategory.id) }} " >Cancel</button></div>
        </div>
        <div class="col-1">
            <div class="col"><button class="btn btn-primary">Submit</button></div>
        </div>

    </div>
</form>



 